<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Dunn Vineyards" %></title>

		<%= stylesheet_link_tag "normalize" %>
		<link rel="stylesheet" href="https://unpkg.com/tachyons@4.6.1/css/tachyons.min.css"/>
		<%= javascript_include_tag  "all" %>
		<style>
			html {
				-webkit-font-smoothing: antialiased;
			}
		</style>
	</head>

  <body class="<%= page_classes %> pa5">
    <header>
      <%= image_tag 'logo.jpg', :class => "bg-black w6"  %>
    </header>
    <%= partial 'nav' %>
    <article class="cf">
    <section class="fl w-60">
      <%= yield %>
    </section>
    </article>
    <footer class="bg-light-gray pa3 cf">
    <%= partial 'nav' %>
    <%= partial 'social' %>
    <p class="f6">&copy; 2017 Dunn Vineyards</p>
    </footer>
  </body>
</html>
